{
  "collectionName": "components_product_hero_sections",
  "info": {
    "displayName": "Hero Section",
    "description": "Product landing page hero section with title, subtitle, image and CTA"
  },
  "options": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 200
    },
    "subtitle": {
      "type": "text",
      "maxLength": 500
    },
    "heroImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "ctaText": {
      "type": "string",
      "maxLength": 50
    },
    "ctaLink": {
      "type": "string",
      "maxLength": 500
    },
    "backgroundVideo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["videos"]
    }
  }
}